<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.levingamer8.modlauncher.ui.Controller"
            styleClass="root">

    <!-- TOP BAR -->
    <top>
        <HBox styleClass="topbar" alignment="CENTER_LEFT" spacing="12">
            <VBox spacing="2">
                <Label text="ModLauncher" styleClass="h1"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="made by LevinGamer8" styleClass="mutedSmall"/>
                    <Label fx:id="versionLabel" text="0" styleClass="version"/>
                </HBox>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <VBox alignment="CENTER_RIGHT" spacing="6">
                <Label fx:id="statusLabel" text="Bereit" styleClass="pillOk"/>
                <ProgressBar fx:id="progressBar" visible="false" progress="-1" styleClass="progressSlim"/>
            </VBox>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <HBox spacing="16">

            <!-- LEFT COLUMN -->
            <VBox spacing="14" prefWidth="380">

                <VBox styleClass="card" spacing="10">
                    <Label text="Manifest" styleClass="sectionTitle"/>
                    <VBox spacing="6">
                        <Label text="Manifest URL" styleClass="mutedSmall"/>
                        <TextField fx:id="manifestUrlField" promptText="http://.../manifest.json"/>
                    </VBox>
                </VBox>

                <VBox styleClass="card" spacing="10">
                    <Label text="Profil" styleClass="sectionTitle"/>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <ComboBox fx:id="profileCombo" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>

                <VBox styleClass="card" spacing="10">
                    <Label text="Account" styleClass="sectionTitle"/>
                    <VBox spacing="6">
                        <Label text="Name (Offline/Anzeige)" styleClass="mutedSmall"/>
                        <TextField fx:id="playerNameField" promptText="Player"/>
                    </VBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="loginButton" text="Login (Microsoft)" onAction="#onLoginClicked" styleClass="secondary actionButton"/>
                        <Label fx:id="loginStatusLabel" text="Nicht eingeloggt" styleClass="mutedSmall" />
                    </HBox>
                </VBox>

                <VBox styleClass="card" spacing="10">
                    <Label text="Aktionen" styleClass="sectionTitle"/>

                    <HBox spacing="10">
                        <Button fx:id="launcherUpdateButton" text="Launcher-Update" onAction="#onLauncherUpdate" styleClass="ghost actionButton"/>
                        <Button fx:id="openFolderButton" text="Instanz-Ordner" onAction="#onOpenFolder" styleClass="ghost actionButton"/>
                    </HBox>

                    <HBox spacing="10">
                        <Button fx:id="updateButton" text="Update" onAction="#onUpdate" styleClass="secondary actionButton"/>
                        <Button fx:id="playButton" text="Start" onAction="#onPlay" styleClass="primaryBig actionButton" HBox.hgrow="ALWAYS"/>
                    </HBox>

                    <!-- OPTIONAL: "Details" toggle below -->
                    <TitledPane text="Details (Log)" expanded="false">
                        <VBox spacing="10">
                            <HBox spacing="10">
                                <Button text="Kopieren" onAction="#onCopyLog" styleClass="ghost actionButton"/>
                                <Button text="Leeren" onAction="#onClearLog" styleClass="ghostDanger actionButton"/>
                            </HBox>
                            <TextArea fx:id="logArea" editable="false" wrapText="false" prefRowCount="10" styleClass="logArea"/>
                        </VBox>
                    </TitledPane>
                </VBox>

            </VBox>

            <!-- RIGHT COLUMN: you can keep empty, or later add "News / Patchnotes / server status" -->
            <VBox spacing="14" HBox.hgrow="ALWAYS">
                <VBox styleClass="card" spacing="10">
                    <Label text="Übersicht" styleClass="sectionTitle"/>
                    <Label text="Hier kannst du später Changelog, Server-Status oder Modpack-Infos anzeigen." styleClass="muted"/>
                </VBox>
            </VBox>

        </HBox>
    </center>

</BorderPane>
